@model PSP.Domain.baseusers

@{
    ViewBag.Title = "Редактирование пользователя";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Редактирование пользователя</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Пользователь</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Login)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Login)
            @Html.ValidationMessageFor(model => model.Login)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Group)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Group, ViewBag.Roles as SelectList)
            @Html.ValidationMessageFor(model => model.Group)
        </div>

        @Html.HiddenFor(model => model.ID)

        <p>
            <input type="submit" value="Сохранить" class="btn btn-info btn-sm" />
            @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-info btn-sm" })
        </p>
    </fieldset>
}