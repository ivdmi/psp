@using System.Web.Mvc.Ajax
@using System.Web.Mvc.Html
@model PSP.WebUI.Models.BoardEventsViewModel

<h2>Редактирование событий</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <p>
        @Html.LabelFor(model => model.EventsOfDay.UserName, new { @class = "col-lg-1" })
        @Html.DisplayFor(model => model.EventsOfDay.UserName)
    </p>

    <p>@Html.HiddenFor(model => model.EventsOfDay.UserId)</p>

    <p>
        @Html.LabelFor(model => model.EventsOfDay.Date, new { @class = "col-lg-1" })
        @Html.DisplayFor(model => model.EventsOfDay.Date, new { @Value = Model.EventsOfDay.Date.ToString("dd.MM.yyyy") })
        @Html.HiddenFor(model => model.EventsOfDay.Date)
    </p>

    <p>
        @Html.LabelFor(model => model.EventsOfDay.Comments, new { @class = "col-lg-1" })
        @Html.TextAreaFor(model => model.EventsOfDay.Comments, 4, 80, null)
    </p>

    <p>
        @Html.LabelFor(model => model.EventsOfDay.EventDesc, new { @class = "col-lg-1" })
        @Html.TextAreaFor(model => model.EventsOfDay.EventDesc, 4, 80, null)
    </p>

    <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>С</th>
                <th>По</th>
                <th>Предприятие</th>
                <th>Деятельность</th>
                <th>Комментарий</th>
                <th>Удалить</th>
            </tr>

            @for (int i = 0; i < Model.EventsOfDay.Activities.Count; i++)
            {
                <tr>
                    <td>@Html.TextBoxFor(m => m.EventsOfDay.Activities[i].TimeFrom, new { @Value = Model.EventsOfDay.Activities[i].TimeFrom.ToString("HH:mm") })
                    <td>@Html.TextBoxFor(m => m.EventsOfDay.Activities[i].TimeTo, new { @Value = Model.EventsOfDay.Activities[i].TimeTo.ToString("HH:mm") })</td>
                    <td class="col-lg-4">
                        @Html.DropDownListFor(m => m.EventsOfDay.Activities[i].Factory, new SelectList((Model.Factories), Model.EventsOfDay.Activities[i].Factory), new { @class = "col-lg-12" })
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.EventsOfDay.Activities[i].ActivityKey, new SelectList(Model.States, "Key", "Name", Model.EventsOfDay.Activities[i].ActivityKey))
                    </td>
                    <td>
                        @Html.EditorFor(m => m.EventsOfDay.Activities[i].Comment)
                        @Html.ValidationMessageFor(m => m.EventsOfDay.Activities[i + 1].Comment)
                    </td>
                    <td>
                        @Html.EditorFor(m => m.EventsOfDay.Activities[i].Check)
                        @*@Html.ActionLink("Edit", "EditActivity", new {date = Model.EventsOfDay.Date, userId = Model.EventsOfDay.UserId, rowNum = i}, new {@class = "btn btn-info btn-sm"})
                        @Ajax.ActionLink("Delete", "Delete", new {userId = Model.EventsOfDay.UserId.ToString(), dateParam = Model.EventsOfDay.Date, deleteRow = i}, new AjaxOptions {HttpMethod = "POST"})*@
                    </td>
                </tr>
            }

        </tbody>
    </table>
    @Html.ActionLink("Добавить событие", "AddActivity", new { userId = Model.EventsOfDay.UserId, date = Model.EventsOfDay.Date }, new { @class = "btn btn-info btn-sm" })
    <button type="submit" class="btn btn-info btn-sm">Сохранить</button>
    @*@Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-info btn-sm" })*@
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}