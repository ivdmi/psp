@using PSP.WebUI.Models
@model IList<UsersTreeViewModel>

@{
    ViewBag.Title = "About";
}
<body>
<h2>About</h2>

    <ul>
        @foreach (var c in Model)
        {
            <li>
                @Html.ActionLink(c.Name, "Details", new { id = c.Id }, new { @class = "modalLink" })
            </li>
        }
    </ul>

<div class="container">
        <div class="masthead">
            <h3 class="text-muted">@Html.ActionLink("Application Name", "Index", "Home")</h3>
            <h4>Навигационные панели</h4>
            <ul class="nav nav-justified">
                <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "active"})</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
        </div>
    </div>

    <h6>Для создания навигации по типу вкладок применяется класс nav-tabs. </h6>
    <ul class="nav nav-tabs">
        <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
    </ul>


    <h6>Еще один вариант создания панели ссылок представляет класс nav-pills:</h6>
    <ul class="nav nav-pills">
        <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
    </ul>

    <h6>
        Заглавия
        Для создания ссылок заголовков применяется класс breadcrumb:
    </h6>
    <ul class="breadcrumb">
        <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
    </ul>

    <h6>
        Пагинация
        Класс pagination позволяет создать панель ссылок в виде постраничной навигации:
    </h6>
    <ul class="pagination">
        <li><a href="#">«</a></li>
        <li><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a href="#">»</a></li>
    </ul>

    <h6>
        Кнопки
        Для создания кнопок Bootstrap имеет класс btn. Как правило, кнопки офрмляются в группу с помощью класса btn-group:
    </h6>

    <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">Left</button>
        <button type="button" class="btn btn-default">Middle</button>
        <button type="button" class="btn btn-default">Right</button>
    </div>


    <h6>Dropdowns</h6>
<div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Dropdown
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Separated link</a></li>
        </ul>
    </div>

<h6>Кнопка с выпадающим списком</h6>

    <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            Язык программирования <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li><a href="#">JavaScript</a></li>
            <li><a href="#">C#</a></li>
            <li><a href="#">VB.NET</a></li>
            <li class="divider"></li>
            <li><a href="#">Java</a></li>
        </ul>
    </div>

    <dt>Метки</dt>
    <span class="label label-default">Default</span>
    <span class="label label-primary">Primary</span>
    <span class="label label-success">Success</span>
    <span class="label label-info">Info</span>
    <span class="label label-warning">Warning</span>
    <span class="label label-danger">Danger</span>

    <h6>Alert:</h6>
    <div class="alert alert-success">Задача успешно завершена</div>
    <div class="alert alert-info">Дополнительная информация</div>
    <div class="alert alert-warning">Внимание!</div>
    <div class="alert alert-danger">Опасно!</div>

    <dt>Таблицы</dt>
    <div class="row">
        <div class="col-md-6">
            <table class="table table-striped table-bordered table-hover">
                <tbody>
                    <tr>
                        <th>
                            Язык
                        </th>
                        <th>
                            Процент
                        </th>
                    </tr>
                    <tr><td>C</td><td>17.5%</td></tr>
                    <tr><td>Java</td><td>16.4%</td></tr>
                    <tr><td>Objective-C</td><td>12.1%</td></tr>
                    <tr><td>C++</td><td>6.3%</td></tr>
                    <tr><td>C#</td><td>5.6%</td></tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Button HTML (to Trigger Modal) -->

    <a href="#myModal" role="button" class="btn btn-large btn-primary" data-toggle="modal">Launch Demo Modal</a>



    <!-- Modal HTML -->
    <div id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Confirmation</h4>
                </div>
                <div class="modal-body">
                    <p>Do you want to save changes you made to document before closing?</p>
                    <p class="text-warning"><small>If you don't save, your changes will be lost.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

<div id="modal" class="modal">
    <div class="modal-header">
        <h2>Lorem Ipsum</h2>
    </div>
    <div class="modal-body">
        <p>
            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
            Donec placerat sem ipsum, ut faucibus nulla. Nullam mattis volutpat
            dolor, eu porta magna facilisis ut. In ultricies, purus sed pellentesque
            mollis, nibh tortor semper elit, eget rutrum purus nulla id quam.
        </p>
    </div>
</div>

@Html.ActionLink("Details", "Details", "Home", null, new { @class = "modal btn btn-success" })



@section scripts
{
    <script type="text/javascript">

        $(function() {
            $.ajaxSetup({ cache: false });
            $(".modalLink").click(function (e) {

                e.preventDefault();
                $.get(this.href, function(data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        });

    </script>
    }


</body>