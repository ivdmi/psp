@model PSP.Domain.users

<div class="modal-header">
    @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>*@
    <h4>Сведения о пользователе:</h4>
</div>
<div class="modal-title" style="color: #3A87AD; margin: 20px">
    <h5>@Model.Name</h5>
</div>

<div class="modal-body">
    <div class="alert alert-warning">
        <span class="glyphicon glyphicon-warning-sign"></span><br />
        ID: @Model.ID <br/>
        GroupID: @Model.GroupID
    </div>

    @using (Html.BeginForm("UserInfo", "Home", FormMethod.Post))
    {
        <div class="row">
            &nbsp;
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                @*<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>*@
                <button type="submit" id="approve-btn" class="btn btn-danger">Закрыть</button>
            </div>
        </div>
    }
</div>