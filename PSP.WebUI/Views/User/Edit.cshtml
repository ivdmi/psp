@model PSP.Domain.users

@{
    ViewBag.Title = "Редактирование учетной записи сотрудника";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Редактирование учетной записи сотрудника</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Пользователь</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Contact)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Contact)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.groups)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.GroupID, ViewBag.GroupID as SelectList)
            @Html.ValidationMessageFor(model => model.groups)
        </div>

        @Html.HiddenFor(model => model.ID)

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

